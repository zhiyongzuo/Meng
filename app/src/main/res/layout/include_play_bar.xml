<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:id="@+id/play_bar"
    android:descendantFocusability="afterDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_play_bar_album_pic"
        android:src="@drawable/default_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_play_bar_song_name"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="1874"
        app:layout_constraintLeft_toRightOf="@+id/iv_play_bar_album_pic"
        app:layout_constraintTop_toTopOf="@+id/iv_play_bar_album_pic"
        app:layout_constraintBottom_toTopOf="@+id/tv_play_bar_song_author"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/tv_play_bar_song_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1874"
        app:layout_constraintLeft_toLeftOf="@+id/tv_play_bar_song_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_play_bar_song_name"
        app:layout_constraintBottom_toBottomOf="@+id/iv_play_bar_album_pic"/>
    <ImageView
        android:id="@+id/iv_play_bar_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/play_bar_btn_play_pause_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_play_bar_next"/>
    <ImageView
        android:id="@+id/iv_play_bar_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_play_bar_btn_next"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.widget.ProgressBar
        android:id="@+id/pb_play_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>