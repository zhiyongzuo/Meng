<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_fragment_music"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/viewpager_fragment_music"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_fragment_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tablayout_fragment_music"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/include_play_bar"/>
</android.support.constraint.ConstraintLayout>